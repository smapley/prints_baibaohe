<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detail_delect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lin1"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/lin1"
        android:gravity="center"
        android:padding="10dp"
        android:text="删除"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@drawable/textview_circle">

        <TextView
            android:id="@+id/detail_item1"
            style="@style/data_text"
            android:text="明细"
            android:textColor="@color/blue" />

        <TextView
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/detail_item2"
            style="@style/data_text"
            android:text="中奖" />
    </LinearLayout>

    <TextView
        android:id="@+id/re_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lin1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lin1"
        android:gravity="center"
        android:padding="10dp"
        android:text="重打"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/lin1"
        android:background="@color/gray" />


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/details_check"
                style="@style/data_text1"
                android:gravity="left|center_vertical"
                android:text="号码" />

            <TextView
                android:id="@+id/details_check2"
                style="@style/data_text1"
                android:text="号码"
                android:visibility="gone" />

            <TextView
                style="@style/data_text1"
                android:layout_weight="0.5"
                android:text="金额" />

            <TextView
                style="@style/data_text1"
                android:layout_weight="0.8"
                android:text="赔率" />

            <TextView
                style="@style/data_text1"
                android:layout_weight="0.8"
                android:text="状态" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray" />

        <com.smapley.moni.listview.SwipeMenuListView
            android:id="@+id/detail_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.smapley.moni.listview.SwipeMenuListView>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/page_up"
                style="@style/data_text"
                android:text="上页" />

            <TextView
                android:id="@+id/page_num"
                style="@style/data_text"
                android:text="1" />

            <TextView
                android:id="@+id/page_down"
                style="@style/data_text"
                android:text="下页" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>